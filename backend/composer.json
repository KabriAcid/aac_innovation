{
    "name": "aac-innovation/backend",
    "description": "AAC Innovation Corporate Website - PHP Backend",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "AacInnovation\\": "src/"
        }
    },
    "config": {
        "vendor-dir": "vendor"
    },
    "scripts": {
        "test": "phpunit tests/",
        "install-deps": "composer install --no-dev --optimize-autoloader"
    }
}
